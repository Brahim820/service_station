<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <record id="action_csa_reconciliation_form" model="ir.ui.view">
            <field name="name">Csa reconciliation Form</field>
            <field name="model">csa.reconciliation</field>
            <field name="arch" type="xml">
                <form string="Reconcile Csa Shorts and Excesses">
                    <group>
                        <span colspan="4" nolabel="1">
                            Enter the amount that the Agent wishes to reconcile against their pending shorts.
                            <br />
                            The total value shows the pending amount the Agent owes.
                        </span>
                    </group>
                    <group>
                        <field name="total" />
                        <field name="amount" />
                        <field name="balance" />
                    </group>

                    <footer>
                        <button name="action_reconcile" string="Create Payout" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_csa_reconciliation" model="ir.actions.act_window">
            <field name="name">Csa Reconciliation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">csa.reconciliation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="action_csa_reconciliation_form" />
            <field name="target">new</field>
        </record>
    </data>
</odoo>
